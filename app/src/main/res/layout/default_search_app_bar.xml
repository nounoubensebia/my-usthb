<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/app_bar_layout"
        android:background="@color/backgroundColor"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:textColor="@android:color/white"
            android:text="Itinéraire trouvé"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/backgroundColor"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingTop="12dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:elevation="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginTop="6dp"
                            app:srcCompat= "@drawable/ic_my_location_white_24dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <View
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center"
                            android:background="#94BAF9"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <TextView
                        android:text="Lieu actuel"

                        android:textColor="@android:color/white"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/my_location_text"
                        android:background="@drawable/rounded_button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <View
                            android:layout_gravity="center"
                            android:background="#94BAF9"
                            android:layout_width="1dp"
                            android:layout_marginBottom="4dp"
                            android:layout_height="20dp"/>
                        <ImageView
                            app:srcCompat= "@drawable/ic_location_on_white_24dp"
                            android:layout_width="20dp"
                            android:layout_gravity="center"
                            android:layout_height="20dp" />
                    </LinearLayout>

                    <TextView
                        android:text="Faculté de chimie"

                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:id="@+id/destination_text"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/rounded_button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_arrow_up_24dp"
                android:layout_width="32dp"
                android:layout_marginRight="16dp"
                android:layout_height="32dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>