<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nouno.locateme.Activities.SetMarkerActivity">
    <com.mapbox.mapboxsdk.maps.MapView
        android:elevation="0dp"
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mapbox_cameraTargetLat="36.712126"
        app:mapbox_cameraTargetLng="3.178768"
        app:mapbox_cameraZoom="15"
        app:mapbox_styleUrl="mapbox://styles/mapbox/streets-v9"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />
    <TextView
        android:elevation="4dp"
        android:id="@+id/text_my_position"
        android:layout_gravity="center|top"
        android:layout_marginTop="16dp"
        android:text="Ma position"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:drawableRight="@drawable/ic_near_me_black_24dp"
        android:textColor="@color/backgroundColor"
        android:background="@drawable/rounded_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:elevation="4dp"
        android:id="@+id/confirm_button"
        android:paddingTop="16dp"
        android:textSize="16sp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textAllCaps="true"
        android:lines="2"
        android:fontFamily="sans-serif"
        android:text="Appuyer sur la carte pour sÃ©lectionner une position"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="#FFF"
        android:background="@color/backgroundColor"/>


</android.support.design.widget.CoordinatorLayout>
